<%- include('head') %> <%- include('header') %>
<form action="/checkout" method="post">
  <main id="register">
    <div class="user-info">
      <div class="head">
        <h1>Register</h1>
      </div>

      <!-- create register form -->
      <p class="description">Create your very own account</p>

      <div class="input-container">
        <label for="user-name"
          >Email Address <span class="important">*</span></label
        >
        <input type="text" name="username" id="user-name" required />
      </div>

      <div class="input-container">
        <label for="password">Password <span class="important">*</span></label>
        <input type="text" name="password" id="password" required />
      </div>

      <div>
        <input type="checkbox" name="member" id="member" />
        <label for="member">Remember Me</label>
      </div>

      <div>
        <button class="btn btn-success" type="submit">Register</button>
      </div>

      <p class="signup-link">
        Don't have account yet? <a href="/signin"> Sign in</a>
      </p>
    </div>

    <div class="middle-line"></div>

    <div class="user-address">
      <div class="address-head">
        <h2>Delivery Address</h2>
      </div>

      <div class="red-underline"></div>

      <!-- Fill address details -->

      <p class="description">Fill in your delivery information</p>

      <div class="address-container">
        <div class="first">
          <label for="first-name"
            >First Name <span class="important">*</span></label
          >
          <input type="text" name="firstname" id="first-name" required />
        </div>

        <div>
          <label for="last-name"
            >Last Name <span class="important">*</span></label
          >
          <input type="text" name="lastname" id="last-name" required />
        </div>
      </div>

      <div class="address-container">
        <div class="first">
          <label>Email Address <span class="important">*</span></label>
          <input type="text" name="email" required />
        </div>

        <div>
          <label>Phone Number <span class="important">*</span></label>
          <input type="text" name="phone" required />
        </div>
      </div>

      <div class="input-container">
        <label>Address <span class="important">*</span></label>
        <input type="text" name="address" required />
      </div>

      <div class="address-container">
        <div class="first">
          <label>Post code / Zip <span class="important">*</span></label>
          <input type="text" name="postcode" required />
        </div>

        <div>
          <label>Town / City <span class="important">*</span></label>
          <input type="text" name="city" required />
        </div>
      </div>

      <div class="input-container">
        <label>Order Notes</label>
        <textarea name="note" cols="60" rows="3"></textarea>
      </div>
    </div>
  </main>
</form>
<%- include('footer') %>
