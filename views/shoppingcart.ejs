<%- include('head') %> <%- include('header') %>
<form action="/checkout" method="post">
  <main id="checkout">
    <!-- progress bar -->
    <ol class="progress-bar">
      <li class="is-active" data-step="1">Shopping Cart</li>
      <li data-step="2">Checkout</li>
      <li data-step="3" class="progress__last">Order Placed</li>
    </ol>
    <div id="show-cart">
        <!-- items -->
        <div class="test-product">
          <b>Product</b>
          <b>Price</b>
          <b>Quantity</b>
          <b>Subtotal</b>
  
          <div class="product-detail">
            <div><i class="fa-solid fa-xmark"></i></div>
  
            <div class="product-img">
              <img
                src="https://cdn.1112.com/1112/public//images/products/pizza/Oct2021/162217_MCT.png"
                alt=""
              />
            </div>
  
            <div class="product-name">
              <h3>Chicken Trio</h3>
              <p>Size: 28 cm</p>
            </div>
          </div>
          <div class="col">5656</div>
          <div class="col">
            <div class="qty-btn">
              <button class="minus-btn">-</button>
              <span class="cart-num">2</span>
              <button class="plus-btn">+</button>
            </div>
          </div>
          <div class="col subtotal">556</div>
  
          <div class="product-detail">
            <div><i class="fa-solid fa-xmark"></i></div>
            <div class="product-img">
              <img
                src="https://cdn.1112.com/1112/public//images/products/beverage/117561_3.png"
                alt=""
              />
            </div>
            <div class="product-name">
              <h3>Coke</h3>
              <p>Size: 250 ml.</p>
            </div>
          </div>
          <div class="col">5656</div>
          <div class="col">
            <div class="qty-btn">
              <button class="minus-btn">-</button>
              <span class="cart-num">2</span>
              <button class="plus-btn">+</button>
            </div>
          </div>
          <div class="col subtotal">556</div>
        </div>
  </main>
</form>
<%- include('footer') %>
